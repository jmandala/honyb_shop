<div class="toolbar order-links">
  <%= button_link_to t('duplicate'), duplicate_admin_order_path, :icon => 'add', :method => :post %>
</div>

<% if !@order.has_po? && @order.ready_for_po? %>
  <%= button_link_to t("create_po_file"), admin_fulfillment_po_files_path, :icon => 'send-email', :method => :post %>
<% else %>
  <div class="po_requirements" style="clear: both">
    <div>PO Requirements</div>
    <ul>
      <% @order.po_requirements.each do |r| %>
        <li><%= r %></li>
      <% end %>
    </ul>
  </div>
<% end %>
