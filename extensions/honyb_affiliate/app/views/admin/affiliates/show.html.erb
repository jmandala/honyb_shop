<h1><%= t(:affiliate_key) %></h1>

<table>
  <tr data-hook="affiliate_name">
    <th><%= t('affiliate.name') %></th>
    <td>
      <%= @affiliate.name %>
    </td>
  </tr>
  <tr data-hook="affiliate_logo">
    <th><%= t('affiliate.logo') %></th>
    <td>
      <%- if @affiliate.logo? %>
        <%= image_tag @affiliate.logo.url %>
      <%- end %>
    </td>
  </tr>
  <tr data-hook="affiliate_css">
    <th><%= t('affiliate.css') %></th>
    <td>
      <%= @affiliate.css %>
    </td>
  </tr>
</table>

<p>
  <%= link_to_edit @user, :class => 'edit_user' %> <%= t(:or) %>
  <%= link_to t(:back), collection_url %>
</p>
