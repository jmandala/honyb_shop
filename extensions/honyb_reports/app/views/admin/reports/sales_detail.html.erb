<h1><%= t(:sales_detail) %> </h1>

<div id="sales-detail-results" class="honyb-report">
  <%= @table.to_html.html_safe %>
</div>

<% content_for :sidebar do %>
  <%= form_for @search, :url => sales_detail_admin_reports_path do |s| %>
    <%= label_tag nil, t(:date_range) %><br />
    <div class="date-range-filter">
      <div class="left sub-field">
        <%= s.text_field :created_at_greater_than, :class => 'datepicker' %>
        <br/>
        <%= label_tag nil, t(:start), :class => 'sub' %>
      </div>
      <div class="right sub-field">
        <%= s.text_field :created_at_less_than, :class => 'datepicker' %>
        <br/>
        <%= label_tag nil, t(:stop) %>
      </div>
    </div>

    <div class="affiliate_key">
      <%= s.text_field :affiliate_affiliate_key_contains, :class => 'text' %>
      <br/>
      <%= label_tag nil, t('affiliate.affiliate_key') %>
    </div>

    <p><%= button t(:search) %></p>
  <% end %>
<% end %>

